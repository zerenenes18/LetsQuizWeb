@model List<LetsQuizCore.Entities.Admin>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
            background: #f8f8f8;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #444;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        thead {
            background: #007bff;
            color: #fff;
        }

        th, td {
            text-align: left;
            padding: 12px 15px;
        }

        th {
            font-weight: bold;
            border-bottom: 2px solid #ddd;
        }

        tr:not(:last-child) {
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background: #f1f1f1;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

    </style>
</head>
<body>
<div class="container">
    <h1>Admin List</h1>
    <table>
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FirstName</td>
                <td>@admin.LastName</td>
                <td>@admin.Email</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>